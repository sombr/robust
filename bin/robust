#!/usr/bin/env plackup
# vim: ft=perl
package psgi::robust;
use strict;
use warnings;

use feature "state";

use lib 'lib';

use Plack::Builder;
use JSON;

my $json = JSON->new;

use Robust::Controller::Class;

builder {
    enable "Plack::Middleware::AccessLog::Timed", format => '%{X_FORWARDED_FOR}i %h %l %u %t "%r" %>s %b "%{Referer}i" "%{User-agent}i"';
    mount "/"      => sub {
        my $index //= do {
            open(my $file, "template/app.html") or die "No such file";
            local $/ = undef;
            my $data = <$file>;
            close($file);

            $data;
        };

        [ 200, [], [ $index ] ];
    },
    map {
        my $name = $_;
        mount "/js/$name" => sub {
            my $index //= do {
                open(my $file, "js/$name") or die "No such file";
                local $/ = undef;
                my $data = <$file>;
                close($file);

                $data;
            };

            [ 200, [], [ $index ] ];
        }
    } map { $_ =~ s{^.*?/([^/]+js)$}{$1}; $_ } glob("js/*.js"),
    mount "/js/all" => sub {
        my $all = qx{uglifyjs js/* -b};
        [ 200, [], [ $all ] ];
    },
    mount "/classes" => sub {
        return [ 200, [], [
            $json->encode(
                [
                    { name => "Начинающие", start => time(), uid => 123 }
                ]
            )
        ] ];
    },
    mount "/session" => sub {
        return [ 200, [], [ $json->encode(
            {
                name => "Andrew1",
                rsid => 123
            }
        ) ] ];
    }
};
